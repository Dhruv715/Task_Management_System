<!-- UpdateTask.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Task</title>
    <style>
          
        *{
            padding: 0px;
            margin: 0px;
            box-sizing: border-box;
        }
        div{
            margin: 50px auto;
            width: 30%;
            text-align: center;
            background-color: black;
            padding: 10px;
            font-family: poppins;
            color: white;
        }
        div form input{
            padding: 10px 20px;
            margin: 10px 0px;
        }
        div form{
            margin: 10px 0px;
        }
    
    </style>
</head>
<body>
   <div>
    <h1>Update Task</h1>
    <form action="/admin/update/<%= task.task_id %>" method="post">
        <input type="text" name="task_name" value="<%= task.task_name %>" placeholder="Task Name">
        <br>
        <input type="text" name="description" value="<%= task.description %>" placeholder="Description">
        <br>
        <input type="date" name="start_date" value="<%= task.start_date.toISOString().substr(0, 10) %>">
        <br>
        <input type="date" name="end_date" value="<%= task.end_date.toISOString().substr(0, 10) %>">
        <br>
        <input type="submit" value="Update Task">
    </form>
   </div>
</body>
</html>
